<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:background="#E96D71">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card">
        <TextView
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="60dp"
            app:layout_constraintTop_toTopOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/tvDep"
            app:layout_constraintStart_toStartOf="parent"></TextView>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            app:layout_constraintStart_toEndOf="@id/tvID"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"></TextView>
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Age"
            app:layout_constraintStart_toEndOf="@id/tvID"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toTopOf="@id/tvDep"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"></TextView>
        <TextView
            android:id="@+id/tvDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Dep"
            app:layout_constraintStart_toEndOf="@id/tvID"
            app:layout_constraintTop_toBottomOf="@id/tvAge"
            app:layout_constraintBottom_toBottomOf="@id/btnDelete"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"></TextView>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custem_btn"
            android:text="Update"
            android:textSize="12sp"
            app:backgroundTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAge"></Button>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custem_btn"
            android:text="Delete"
            app:backgroundTint="#E6280F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnUpdate"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>