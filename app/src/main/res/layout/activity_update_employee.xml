<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".UpdateEmployee">
    <TextView
        android:id="@+id/tvUpdateEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="UPDATE EMPLOYEE"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edtNameUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="30dp"
        android:background="@drawable/custem_edt"
        app:layout_constraintTop_toBottomOf="@id/tvUpdateEmp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"></EditText>
    <EditText
        android:id="@+id/edtAgeUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Age"
        android:textSize="20sp"
        android:background="@drawable/custem_edt"
        android:textColorHint="@color/black"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/age"
        android:drawablePadding="33dp"
        app:layout_constraintTop_toBottomOf="@id/edtNameUpdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"></EditText>
    <EditText
        android:id="@+id/edtDepUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Department"
        android:textSize="20sp"
        android:background="@drawable/custem_edt"
        android:textColorHint="@color/black"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/dep"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/edtAgeUpdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"></EditText>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custem_btn"
        android:text="SAVE EMPLOYEE"
        android:textSize="20sp"
        app:backgroundTint="#FF5722"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtDepUpdate"></Button>

    <Button
        android:id="@+id/btnBackUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/custem_btn"
        android:text="BACK"
        android:textSize="20sp"
        app:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSave"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>